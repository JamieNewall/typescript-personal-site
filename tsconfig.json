{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true, 
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
    
  },
  "exclude":["node_modules"],
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents"
  }
}